var invertTree = function(root) {
    if (root=== null){
        return root
    }
    invertTree (root.left)
    invertTree (root.right)

    const curr= root.left
    root.left= root.right
    root.right= curr
    return root
    
};
(* Given the root of a binary tree, invert the tree, and return its root.
Example 1:
Input: root = [4,2,7,1,3,6,9]
Output: [4,7,2,9,6,3,1]
Example 2:
Input: root = [2,1,3]
Output: [2,3,1] *)
//Approach post order
//take the left and right children and reverse them
//recursion- swap the left and right subtree
//define a base case
//edge cases- empty tree, tree with one node, tree with one child
